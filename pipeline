pipeline {

    agent any
    stages {
        stage('Cloning') {
            steps {
                git branch: 'main', url: 'https://github.com/pranavyuvarajr/EKS-Deployment.git'
            }
        }

        stage('Docker Build, Tag and Push') {
            steps {
                sh '''
                    docker build -t pub-repo:v$BUILD_NUMBER .
                    docker tag pub-repo:v$BUILD_NUMBER public.ecr.aws/j1o8i8l1/pub-repo:v$BUILD_NUMBER
                    docker push public.ecr.aws/j1o8i8l1/pub-repo:v$BUILD_NUMBER
                '''
            }
        }
        stage('Update New Kubectl Deployment') {
            steps {
                sh "yq e '.spec.template.spec.containers[0].image = "public.ecr.aws/j1o8i8l1/pub-repo:v$BUILD_NUMBER"' -i eks-deployment.yaml"
            }
        }
        stage('Apply Changes in Cluster') {
            steps {
                sh "kubectl apply -f /var/lib/jenkins/workspace/eks-deployment/eks-deployment.yaml"
            }
        }
        stage('Cleaning up') {
            steps {
                sh "docker rmi pub-repo:v$BUILD_NUMBER"
            }
        }
    }
}